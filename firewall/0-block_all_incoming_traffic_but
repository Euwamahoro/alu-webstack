# This code will Install ufw (if not already installed)
sudo apt-get update
sudo apt-get install ufw

# Enable ufw
sudo ufw enable

# Deny all incoming traffic by default
sudo ufw default deny incoming

# Allow SSH (port 22)
sudo ufw allow 22

# Allow HTTPS (SSL, port 443)
sudo ufw allow 443

# Allow HTTP (port 80)
sudo ufw allow 80
